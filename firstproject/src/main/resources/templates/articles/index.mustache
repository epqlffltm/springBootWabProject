{{>layouts/header}}

<div class="container mt-4" style="max-width: 720px;">
    <h2 class="mb-4 fw-bold text-primary d-flex justify-content-between align-items-center">
        게시판 목록
        <a href="/articles/new" class="btn btn-success btn-sm">새 글 작성</a>
    </h2>

    {{#articlePage.content}}
        <div class="card mb-3 shadow-sm hover-shadow" style="transition: box-shadow 0.3s;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <a href="/articles/{{id}}" class="text-decoration-none text-dark flex-grow-1 me-3">
                    <h5 class="card-title mb-0">{{title}}</h5>
                </a>
                <div class="btn-group btn-group-sm" role="group" aria-label="수정 및 삭제 버튼">
                    <a href="/articles/{{id}}/edit" class="btn btn-outline-primary">수정</a>
                    <a href="/articles/{{id}}/delete" class="btn btn-outline-danger" onclick="return confirm('정말 삭제하시겠습니까?');">삭제</a>
                </div>
            </div>
        </div>
    {{/articlePage.content}}

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            {{#articlePage.hasPrevious}}
                <li class="page-item">
                    <a href="/articles?page={{prevPage}}&size={{articlePage.size}}" class="page-link">이전</a>
                </li>
            {{/articlePage.hasPrevious}}

            <li class="page-item disabled">
                <span class="page-link">페이지 {{pageNumberPlusOne}} / {{articlePage.totalPages}}</span>
            </li>

            {{#articlePage.hasNext}}
                <li class="page-item">
                    <a href="/articles?page={{nextPage}}&size={{articlePage.size}}" class="page-link">다음</a>
                </li>
            {{/articlePage.hasNext}}
        </ul>
    </nav>
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
    }
</style>

{{>layouts/footer}}
