{{>layouts/header}}

<div class="container mt-4" style="max-width: 720px;">
    <h2 class="mb-4">게시판 목록</h2>

    {{#articleList}}
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-0">
                    <a href="/articles/{{id}}" class="text-decoration-none text-dark">
                        {{title}}
                    </a>
                </h5>
            </div>
        </div>
    {{/articleList}}

    <div class="mt-4">
        <a href="/articles/new" class="btn btn-success">새 글 쓰기</a>
    </div>
</div>

{{>layouts/footer}}
